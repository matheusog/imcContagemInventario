	<Page id="S2_Contagem" 
		busy="{viewContagem>/busy}"
		busyIndicatorDelay="{viewContagem>/busyDelay}"
		navButtonPress="_back"
		navButtonTooltip="{i18n>s2BtnVoltar}"
		showHeader="false"
		showNavButton="true"
		title="{i18n>s2Title}"
		visible="{viewContagem>/visible}">
		<headerContent>
			<!--
			<OverflowToolbar>
				<Button text="{i18n>s2BtnVoltar}" type="Back" press="onPressS2_Back"/>
			</OverflowToolbar>
			-->
		</headerContent>
		<content>
			<Flexbox alignItems="Center" justifyContent="Center" wrap="Wrap" direction="Column">
				<Label text="{i18n>s2FieldCentro}" design="Bold" labelFor="txb_Centro" />
				<Label text="{viewMain>/centro}" design="Standard"></Label>
				<!--<Input
					id="txb_Centro"
					type="Text"
					placeholder="Código do Centro" />-->
				<Label text="{i18n>s2FieldData}" labelFor="DP3" design="Bold"/>
				<DatePicker
					id="DP3"
					displayFormat="short"
					change="handleChange"
					class="sapUiSmallMarginBottom"
					editable="false"/>
				<Label text="{i18n>s2FieldMaterial}" labelFor="txb_Codigo" design="Bold"/>
				<Input
					id="txb_Codigo"
					type="Text"
					placeholder="{i18n>s2FldPhMaterial}">
				</Input>
				<Button
					id="btn_PesquisaMaterial"
					text="{i18n>s2BtnSearch}"
					type="Default"
					press="onPressS2_PesquisaMaterial">
				</Button>
				<Button
					id="btn_ListarMateriais"
					text="{i18n>s2BtnList}"
					type="Default"
					press="onPressS2_ListaMateriais">
				</Button>
			</Flexbox>
		</content> 
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>s2BtnSalvar}" type="Accept" />
			</OverflowToolbar>
		</footer>
	</Page>
	
	<Page id="S3_ContarMaterial" 
		busy="{viewContMaterial>/busy}"
		busyIndicatorDelay="{viewContMaterial>/busyDelay}"
		navButtonPress="_back"
		navButtonTooltip="{i18n>s2BtnVoltar}"
		showHeader="false"
		showNavButton="true"
		visible="{viewContMaterial>/visible}">
		<content>
			<FlexBox alignItems="Center" justifyContent="Center" wrap="Wrap"  direction="Column">
				<Label text="Centro:" design="Bold"></Label>
					<Input
					id="txb_Codigo8"
					type="Text"
					placeholder="Código do material"
					enabled="false">
					</Input>
				<Label text="Material:" design="Bold"></Label>
				<Input
					id="txb_Codigo2"
					type="Text"
					placeholder="Código do material"
					enabled="false">
				</Input>
				<Label text="Descrição:" design="Bold"></Label>
				<Input
					id="txb_Codigo3"
					type="Text"
					placeholder="Código do material"
					enabled="false">
				</Input>
				<Label text="UMB/UMR:" design="Bold"></Label>
				<Input
					id="txb_Codigo4"
					type="Text"
					placeholder="Código do material"
					enabled="false">
				</Input>
				<Label text="Quantidade:" design="Bold"></Label>
				<Input
					id="txb_Codigo5"
					type="Text"
					placeholder="Código do material"
					enabled="false">
				</Input>
				<Label text="Valor:" design="Bold"></Label>
				<Input
					id="txb_Codigo6"
					type="Text"
					placeholder="Código do material"
					enabled="false">
				</Input>
			</FlexBox>
		</content>
		<footer>
			<!--
			<OverflowToolbar>
				<Button text="Cancelar" type="Back" press="onPressS3Contar_Cancel"/>
				<ToolbarSpacer/>
				<Button text="Salvar" type="Accept" />
			</OverflowToolbar>
			-->
		</footer>
		
	</Page>
	
	<Page id="S3_ListarMateriais" 
		busy="{viewListaMaterial>/busy}"
		busyIndicatorDelay="{viewListaMaterial>/busyDelay}"
		navButtonPress="_back"
		navButtonTooltip="{i18n>s2BtnVoltar}"
		showHeader="false"
		showNavButton="true"
		visible="{viewListaMaterial>/visible}">
		<content>
			<Flexbox alignItems="Center" justifyContent="Center" wrap="Wrap"  direction="Column">
				<MultiComboBox>
					
				</MultiComboBox>
				<SearchField search="handleSearch"/>
				<List
					id="List"
					items="{/ProductCollection}"
					headerText="Products">
					<items>
						<ObjectListItem
							title="{Name}"
							type="Active"
							press="onListItemPress"
							number="{
								parts:[{path:'Price'},{path:'CurrencyCode'}],
								type: 'sap.ui.model.type.Currency',
								formatOptions: {showMeasure: false}
							}"
							numberUnit="{CurrencyCode}">
							<attributes>
								<ObjectAttribute text="{WeightMeasure} {WeightUnit}" />
								<ObjectAttribute text="{Width} x {Depth} x {Height} {DimUnit}" />
							</attributes>
						</ObjectListItem>
					</items>
				</List>
			</Flexbox>
		</content>
		<footer>
			<!--
			<OverflowToolbar>
				<Button text="Cancelar" type="Back" press="onPressS3Listar_Cancel"/>
				<ToolbarSpacer/>
			</OverflowToolbar>
			-->
		</footer>
	</Page>					
				</pages>
			</NavContainer>
		</tnt:mainContents>
		
	</tnt:ToolPage>
	
</mvc:View>