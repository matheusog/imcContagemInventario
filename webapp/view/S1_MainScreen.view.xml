	xmlns="sap.m"
	xmlns:tnt="sap.tnt"
	controllerName="imc.sap.mm.contageminventario.controller.S1_MainScreen" 
	displayBlock="true"
	busy="{viewMain>busy}"
	busyIndicatorDelay="{viewMain>busyDelay}"
	visible="{viewMain>visible}">
